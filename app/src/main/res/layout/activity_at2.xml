<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AT2">

    <TextView
        android:id="@+id/textViewPage"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#FBB2B2"
        android:text="@string/atividade_2"
        android:textAlignment="center"
        android:textSize="48sp" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="117dp"
        android:layout_below="@+id/textViewPage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="68dp"
        android:background="#9AE39D"
        android:text="@string/danieltrindade_n28245"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        android:id="@+id/atividade1Btn"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_below="@+id/textViewName"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="9dp"
        android:text="@string/voltar"
        android:textSize="30sp" />
</RelativeLayout>